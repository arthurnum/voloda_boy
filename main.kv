<MainLayout>:
    cell_grid: cell_grid
    command_grid: command_grid
    orientation: 'horizontal'
    canvas:
        Color:
            rgb: 0.8, 0.9, 1.0
        Rectangle:
            size: self.size
    FloatLayout:
        id: cell_grid
        size_hint: (0.7, 1.0)
        canvas:
            Color:
                rgb: 0.8, 0.7, 0.6
            Rectangle:
                pos: self.pos
                size: self.size
    StackLayout:
        id: command_grid
        size_hint: (0.3, 1.0)
        canvas:
            Color:
                rgb: 0.4, 0.5, 0.65
            Rectangle:
                pos: self.pos
                size: self.size
        spacing: 1
        Button:
            size_hint: (1.0, None)
            text: 'Commands'
            on_press: root.open_command_popup()
        Button:
            size_hint: (1.0, None)
            text: 'Run'
            on_press: root.run()


<Cell>:
    size_hint: (0.2, 0.2)
    canvas:
        Color:
            rgb: 0.0, 0.0, 0.0
        Rectangle:
            pos: self.pos
            size: self.size
        Color:
            rgb: 0.9, 0.9, 0.9
        Rectangle:
            pos: (self.x + 1, self.y + 1)
            size: (self.width - 2, self.height - 2)

<Voloda>:
    size_hint: (0.2, 0.2)
    canvas:
        Color:
            rgb: 0.0, 0.0, 0.0
        Ellipse:
            pos: self.pos
            size: self.size

<CommandLineWidget>
    id_command_label: id_command_label
    text_command_label: text_command_label
    delete_button: delete_button
    size_hint: (1.0, 0.05)
    canvas.before:
        Color:
            rgb: 0.4, 0.5, 0.7
        Rectangle:
            pos: self.pos
            size: self.size
    BoxLayout:
        orientation: 'horizontal'
        pos: self.parent.pos
        size: self.parent.size
        Label:
            id: id_command_label
            size_hint: (0.15, 1.0)
            text_size: self.size
            halign: 'right'
            valign: 'middle'
        Label:
            id: text_command_label
            size_hint: (0.6, 1.0)
        Button:
            id: delete_button
            size_hint: (0.2, 1.0)
            Image:
                source: 'images/jean_victor_balin_cross.png'
                pos: self.parent.pos
                size: self.parent.size